<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#E3F2FD"
    android:padding="20dp"
    tools:context=".Acceuil">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/dar"
        android:scaleType="centerCrop"
        android:contentDescription="En-tête" />

    <TextView
        android:id="@+id/txt_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#1976D2"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:id="@+id/btnajout_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_blue_light"
        android:text="Ajout"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="10dp"
        android:elevation="2dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:drawablePadding="4dp" />

    <Button
        android:id="@+id/btnaff_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_light"
        android:text="Affichage"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="10dp"
        android:elevation="2dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:drawablePadding="4dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:text="Déconnecter"
        android:background="@android:color/holo_red_light"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="10dp"
        android:elevation="2dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawablePadding="4dp" />

    <TextView
        android:id="@+id/txt_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="© 2024 Contact"
        android:textAlignment="center"
        android:textColor="#757575"
        android:textSize="14sp" />
</LinearLayout>
